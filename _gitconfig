#     https://gist.github.com/tdd/470582
# cf. https://hypedrivendev.wordpress.com/2013/09/30/git-config-les-options-indispensables/
[user]
	name = St√©phane Lopes
	email = stephane.lopes@uvsq.fr
[core]
	pager = less
	editor = vim
	whitespace = -trailing-space
	autocrlf = input
[color]
	ui = auto
[alias]
	br = branch
	ci = commit
	co = checkout
	lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
	oops = commit --amend --no-edit
	st = status -s
	up = rebase
	sl = shortlog -sne
[log]
	abbrevCommit = true
[push]
	default = simple
[diff]
	mnemonicPrefix = true
	renames = true
	wordRegex = .
	tool = meld
[merge]
	conflictStyle = diff3
	tool = meld
[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = false

[pull]
	rebase = false
[init]
	defaultBranch = main
